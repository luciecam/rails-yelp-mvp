<h1>Add a new restaurant 🍽️</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, collection: Restaurant::CATEGORIES %>
  <%= f.submit %>
<% end %>

<br>

<%= link_to "Back to the list", restaurants_path, class: "btn btn-primary" %>